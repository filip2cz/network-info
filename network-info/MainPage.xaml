<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="network_info.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Network Info" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Local network" FontSize="Title" Padding="30,10,30,10"/>
        <Label Text="basic text" FontSize="16" Padding="30,0,30,0"/>
        
        <Label Text="About public ip" FontSize="Title" Padding="30,10,30,10"/>
        <Label FontSize="16" Padding="30,0,30,0">
            <Label.FormattedText>
                <FormattedString>
                    <FormattedString.Spans>
                        <Span Text="Your IP: "/>
                        <Span Text="{Binding Ipv4}" FontAttributes="Bold"/>
                    </FormattedString.Spans>
                </FormattedString>
            </Label.FormattedText>
        </Label>
        <!--
        <Label FontSize="16" Padding="30,0,30,0">
            <Label.FormattedText>
                <FormattedString>
                    <FormattedString.Spans>
                        <Span Text="Your IPv6: "/>
                        <Span Text="{Binding Ipv6}" FontAttributes="Bold"/>
                    </FormattedString.Spans>
                </FormattedString>
            </Label.FormattedText>
        </Label>
        -->
        <Label FontSize="16" Padding="30,0,30,0">
            <Label.FormattedText>
                <FormattedString>
                    <FormattedString.Spans>
                    </FormattedString.Spans>
                </FormattedString>
            </Label.FormattedText>
        </Label>

        <Label Text="Other" FontSize="Title" Padding="30,10,30,10"/>
        <Label Text="Created by Filip Komárek" FontSize="16" Padding="30,0,30,0"/>
        <Label Text="https://github.com/filip2cz/network-info" FontSize="16" Padding="30,0,30,0"/>
    </StackLayout>

</ContentPage>
